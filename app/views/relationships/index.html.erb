<p id="notice"><%= notice %></p>

<h1>Listing Relationships</h1>

<table>
  <thead>
    <tr>
      <th>Family</th>
      <th>Person 1</th>
      <th>Person 2</th>
      <th>Relationship type</th>
      <th>Role 1</th>
      <th>Role 2</th>
      <th>Date started</th>
      <th>Date ended</th>
      <th>Other details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relationships.each do |relationship| %>
      <tr>
        <td><%= relationship.family %></td>
        <td><%= relationship.person_1_id %></td>
        <td><%= relationship.person_2_id %></td>
        <td><%= relationship.relationship_type %></td>
        <td><%= relationship.role_1_id %></td>
        <td><%= relationship.role_2_id %></td>
        <td><%= relationship.date_started %></td>
        <td><%= relationship.date_ended %></td>
        <td><%= relationship.other_details %></td>
        <td><%= link_to 'Show', relationship %></td>
        <td><%= link_to 'Edit', edit_relationship_path(relationship) %></td>
        <td><%= link_to 'Destroy', relationship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

